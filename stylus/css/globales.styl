Fuente1 = 'Lato', san-serif
Fuente2 = 'Oswald', san-serif
color-primario = #333333
color-secundario = #8841da
color-claro = #ffffff

// Mixins

contenedor()
	display flex
	width 96%
	margin 0 auto
	padding 30px 0

caja-sombra()
	background-color: color-claro
	box-shadow: 0px 20px 33px 0px rgba(0, 0, 0, 0.20)

// Funciones

opacidad(color, cantidad)
	alpha(color, cantidad) //Este ya es una funcion de stylus para realizar el calculo

for header in 3 2 1
	h{header}
		font-size: 35px - (5*header)
		margin: 0

titulos(fuente)
	if fuente == Fuente1
		font-family: Fuente1
	else
		font-family: Fuente2
		font-weight: 600
		text-transform: uppercase

// En stylus es opcional lo siguiente:
// llaves {}
// Punto y comas ;
// Dos puntos :

* 
	box-sizing: border-box

body
	margin: 0
	// font-family: Fuente1
	color: color-primario
	titulos(Fuente1)

